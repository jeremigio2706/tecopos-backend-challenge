# .env.example
# ======================================
# TECOPOS BACKEND CHALLENGE
# Environment Variables Template
# ======================================

# Application
NODE_ENV=development

# Gateway Service
GATEWAY_PORT=3000
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# SSO Service
SSO_PORT=3001
SSO_DB_NAME=tecopos_sso
SSO_DB_USER=tecopos_user
SSO_DB_PASSWORD=your_secure_password_here
SSO_DB_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=1h

# Accounts Service
ACCOUNTS_PORT=3002
MOCKAPI_URL=https://your-mockapi-id.mockapi.io/api/v1

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_key