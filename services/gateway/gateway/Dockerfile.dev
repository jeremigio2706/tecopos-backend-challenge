FROM node:18-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm ci

# Copiar el resto del código (será sobrescrito por volúmenes en desarrollo)
COPY . .

# Exponer puerto
EXPOSE 3000

# Comando para modo desarrollo con hot reload
CMD ["npm", "run", "start:dev"]
